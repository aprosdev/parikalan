<section class="clearfix">
    <div class="page-section-ptb bg-overlay-black-70 parallax pb-150" data-jarallax='{"speed": 0.6}' style="background-image: url(<%= home_page.price_section_background_image %>);">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="section-title text-center">
                        <h3 class="text-white mb-20">
                            <%= home_page.price_section_title %>
                        </h3>
                        <h5 class="text-white fw-4">
                            <%= home_page.price_section_subtitle %>
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="page-section-pb">
        <div class="container">
            <div class="skill-counter">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="tab nav-border nav-center">
                            <ul class="nav nav-tabs pb-3" id="myTab" role="tablist">
                                <% ServiceCategory.where(show_in_affordable_pricing_block: true).each_with_index do |s, idx| %>
                                <li class="nav-item">
                                    <a class="nav-link <%= " active" if idx==0 %> show" id="service-0 <%= idx +1 %>-tab" data-toggle="tab" href="#service-0<%= idx +1 %>" role="tab" aria-controls="service-0<%= idx +1 %>" aria-selected="true">
                                        <%= s.name %></a>
                                </li>
                                <% end %>
                            </ul>
                            <div class="tab-content" id="myTabContent">
                                <% ServiceCategory.where(show_in_affordable_pricing_block: true).each_with_index do |s, idx| %>
                                <div class="tab-pane fade <%= " active" if idx==0 %> show" id="service-0<%= idx +1 %>" role="tabpanel" aria-labelledby="service-0<%= idx +1 %>-tab">
                                    <div class="row">

                                        <% s.services.where(show_in_affordable_pricing_block: true).each do | s | %>

                                            <div class="col-lg-3 col-md-3 mb-60">
                                                <ul class="price">
                                                    <li class="header"><%= s.name %></li>
                                                    <li class="grey">â‚¹ <%= s.lowest_price %> </li>
                                                    <li><%= s.short_description.html_safe %></li>
                                                    <li class="grey">
                                                        <a href="<%= service_detail_path(slug: s.url_slug)%>" class="button">Sign Up</a>
                                                    </li>
                                                </ul>
                                            </div>

                                        <% end %>


                                    </div>
                                </div>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>