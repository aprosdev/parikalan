<section class="page-section-ptb" id="testimonals_section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="section-title text-center">
                    <h6><%= home_page.testimonial_section_title %></h6>
                    <h2 class="title-effect"><%= home_page.testimonial_section_subtitle %></h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <% if mobile? %>
                <div class="owl-carousel" 
                    data-nav-dots="true" 
                    data-items="1" 
                    data-md-items="1" 
                    data-sm-items="1" 
                    data-xs-items="1" 
                    data-xx-items="1">
                <% else %>
                    <div 
                        class="owl-carousel" 
                        data-nav-dots="true" 
                        data-items="2" 
                        data-md-items="2" 
                        data-sm-items="2" 
                        data-xs-items="2" 
                        data-xx-items="2">
                <% end %>
                    <% Testimonial.all.each do |t| %>
                    <div class="item">
                        <div class="testimonial bottom_pos">
                            <div class="testimonial-avatar"> <img alt="" src="<%= t.image %>"> </div>
                            <div class="testimonial-info"><%= t.description.html_safe %></div>
                            <div class="author-info"> <strong><%= t.name %> - <span><%= t.designation %></span></strong> </div>
                        </div>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>
